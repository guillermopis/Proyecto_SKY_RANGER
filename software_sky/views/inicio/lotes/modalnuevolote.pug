div(class="modal fade bd-example-modal-lg" id="modalnuevolote" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true")
  div(class="modal-dialog modal-lg" role="document")
    div(class="modal-content")
      div(class="modal-header")        
        form(class="was-validated" style="font-family: bold" name="newlote" id="newlote")                      
          .form-row
            .form-group.col-md-6
              .form-group(class="container")
                h5(class="modal-title" id="exampleModalLabel") LOTE
            .form-group.col-md-3
              .form-group(class="container")
                div(class="custom-control custom-checkbox mb-3")            
                  input(type="checkbox" class="custom-control-input" id="simlote"
                  onClick="check1(this)" required)
                  label(class="custom-control-label" for="simlote" id="simlote") SIM            
            .form-group.col-md-3
              .form-group(class="container")
                div(class="custom-control custom-checkbox mb-3")            
                  input(type="checkbox" class="custom-control-input" id="gpslote"
                  onClick="check2(this)" required)
                  label(class="custom-control-label" for="gpslote") GPS            
        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      div(class="modal-body")
        form(class="needs-validation" novalidate ,style="border: 8px black solid; font-family: bold" align="center" id="formnuevolote")          
          .form-row
            .form-group.col-md-4
              .form-group(class="container")
                br
                label CODIGO DE LOTE
                input(type="text" class="form-control" id="codigolote" style="border: 2px blue solid" disabled required)
                    
            .form-group.col-md-4
              .form-group(class="container")
                br  
                label PROVEEDOR
                <select id="idproveedor" class="form-control" style="border: 2px blue solid">
                  for tipo in datospro.data
                    <option value=#{tipo.id}>#{tipo.nombre}</option>  
                  </select>
            .form-group.col-md-4
              .form-group(class="container")              
                label CANTIDAD DE DISPOSITIVOS
                input(type="text" class="form-control" id="cantidaddis" style="border: 2px blue solid" required pattern="[0-9]")   
                <div class="invalid-feedback">
                    loo  Por favor ingrese numero de dispositivos!
                </div>
          .form-row
            .form-group.col-md-4
              .form-group(class="container")
                br
                label FECHA DE COMPRA
                div(class="input-group date fj-date")
                  input(type="text" class="form-control" id="fechacompralote" style="border: 2px blue solid" required)    
                  span(class="input-group-addon")
                  i(class="glyphicon glyphicon-th")
                  <div class="invalid-feedback">
                    loo  Por favor ingrese Fecha!
                  </div>                   
            .form-group.col-md-4
              .form-group(class="container")
                br
                label FECHA DE ACTIVACION
                div(class="input-group date fj-date")
                  input(type="text" class="form-control" id="fechaactivacionlote" style="border: 2px blue solid" onblur="agregarfechasim()" required)
                  span(class="input-group-addon")
                  i(class="glyphicon glyphicon-th") 
                  <div class="invalid-feedback">
                    loo  Por favor ingrese Fecha!
                  </div>                  
            .form-group.col-md-4
              .form-group(class="container")
                label FECHA VENCIMIENTO DE DATOS
                div(class="input-group date fj-date")
                  input(type="text" class="form-control" id="fechavencimientolote" style="border: 2px blue solid" onblur="fechamayor()" required)
                  span(class="input-group-addon")
                  i(class="glyphicon glyphicon-th")
                  <div class="invalid-feedback">
                    loo  Por favor ingrese Fecha!
                  </div>                  
          .form-row  
            .form-group.col-md-4
              .form-group(class="container")
                br
                label PRECIO UNITARIO
                input(type="text" class="form-control" id="preciounitariolote" style="border: 2px blue solid" step="0.01" onblur="preciototal()" required)
                <div class="invalid-feedback">
                  loo  Por favor ingrese precio unitario!
                </div>  
            .form-group.col-md-4
              .form-group(class="container")
                br
                label PRECIO TOTAL
                input(type="text" class="form-control" id="preciototallote" style="border: 2px blue solid" disabled required)    
            .form-group.col-md-4
              .form-group(class="container")
                label DURACION PLAN DE DATOS
                input(type="text" class="form-control" id="duraciondatoslote" style="border: 2px blue solid")  
                <input type="text" id="bandera" name="bandera">
                <input type="text" id="id" name="id">                      
        
      div(class="modal-footer")
        div(class="form-group form-check")
          button(type="button" id="btnCerrar" name="btnCerrar" class="btn btn-secondary" style="border: 2px black solid" data-dismiss="modal" ) CERRAR
          button(button type="button" id="btnGuardarlote" name="btnGuardarlote" class="btn btn-primary" style="border: 2px black solid") GUARDAR          
      //mandamos a llamar a la funcion de la fecha para que la muestre
script(src="fecha/js/app.js")