div(class="modal fade bd-example-modal-lg" id="modalnuevousuario" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true")
  div(class="modal-dialog modal-lg" role="document")
    div(class="modal-content")
      div(class="modal-header")
        h5(class="modal-title" id="exampleModalLabel") NUEVO USUARIO
        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      div(class="modal-body")
        form(style="border: 8px black inset; font-family: bold" align="center" id="formcliente")          
          .form-group.col-md-12
            .form-group(class="container")
              label DPI
              input(type="text" class="form-control" id="nombre" style="border: 2px blue outset" )    
          .form-row
            .form-group.col-md-6
              .form-group(class="container")
                label NOMBRE
                input(type="text" class="form-control" id="nombre" style="border: 2px blue outset" )    
            .form-group.col-md-6
              .form-group(class="container")
                label DIRECCION
                input(type="text" class="form-control" id="direccion" style="border: 2px blue outset")          
          .form-row  
            .form-group.col-md-6
              .form-group(class="container")
                label CORREO ELECTRONICO
                input(type="text" class="form-control" id="correo" style="border: 2px blue outset")                        
            .form-group.col-md-6
              .form-group(class="container")
                label DIRECCION DE FACTURACION
                input(type="text" class="form-control" id="dirfact" style="border: 2px blue outset")                          
          .form-row
              .form-group.col-md-3              
                .form-group(class="container")
                  label NIT
                  input(type="text" class="form-control" id="nit" style="border: 2px blue outset")          
              .form-group.col-md-3              
                .form-group(class="container")
                  label TELEFONO
                  input(type="text" class="form-control" id="telefono" style="border: 2px blue outset")          
              .form-group.col-md-3
                .form-group(class="container")
                  label ESTADO
                  select(id="estado" class="form-control" style="border: 2px blue outset")
                    option.select ACTIVO
                    option.select DE BAJA                        
              .form-group.col-md-3
                .form-group(class="container")                
                  label TIPO DE PAGO
                  <select id="tipopago" class="form-control" style="border: 2px blue outset">
                  for tipo in datos.data
                    <option value=#{tipo.id}>#{tipo.nombre}</option>  
                  </select>
          .form-row
              .form-group.col-md-3             
                .form-group(class="container")
                  label TIPO DE SERVICIO
                  <select id="tiposervicio" class="form-control" style="border: 2px blue outset">
                  for tipo2 in servicios.data
                    <option value=#{tipo2.id}>#{tipo2.nombre}</option>
                  </select>
              .form-group.col-md-3              
                .form-group(class="container")
                  label FECHA INGRESO
                  input(type="text" class="form-control" id="fecha" style="border: 2px blue outset")          
              .form-group.col-md-4              
                .form-group(class="container")
                  label TIPO DE MORA
                  <select id="tipoMora" neme="tipoMora" class="form-control" style="border: 2px blue outset">
                  for tipo3 in moras.data
                    <option value=#{tipo3.id}>#{tipo3.descripcion} #{tipo3.porcentaje}%</option>
                  </select>                                                    
          .form-row
              .form-group.col-md-3              
                .form-group(class="container")
                  label SALDO Q.
                  input(type="text" class="form-control" id="saldo" style="border: 2px blue outset")          
              .form-group.col-md-3              
                .form-group(class="container")
                  label ANTICIPO Q.
                  input(type="text" class="form-control" id="anticipo" style="border: 2px blue outset")
                  <input type="text" id="bandera" name="bandera">
                  <input type="text" id="id" name="id">          
      div(class="modal-footer")
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" id="check1">
          <label id="che" class="form-check-label" for="check1">MODIFICAR DATOS</label>
        </div>
        <div class="form-group form-check">
          button(type="button" id="btnCerrar" name="btnCerrar" class="btn btn-secondary" data-dismiss="modal" style="border: 2px black outset") CERRAR
          button(button type="button" id="btnGuardar" name="btnGuardar" class="btn btn-primary" style="border: 2px black outset") GUARDAR
        </div>      
