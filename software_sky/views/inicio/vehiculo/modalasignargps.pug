div(class="modal fade bd-example-modal-lg" id="modalasignargpsve" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true")
  div(class="modal-dialog modal-lg" role="document")
    div(class="modal-content")
      div(class="modal-header")
        h5(class="modal-title" id="exampleModalLabel") ASIGNAR GPS A VEHICULO
        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      div(class="modal-body")
        form(style="border: 8px black inset; font-family: bold" align="center" id="formusuario")          
          .form-row
            .form-group.col-md-4
              .form-group(class="container")
                label PLACA DEL VEHICULO
                input(type="text" class="form-control" id="placave2" style="border: 2px blue solid" )    
            .form-group.col-md-4
              .form-group(class="container")
                label FECHA
                input(type="text" class="form-control" id="fechave" style="border: 2px blue solid" )    
            .form-group.col-md-4
              .form-group(class="container")
                label TECNICO
                select(id="tecnico" class="form-control" style="border: 2px blue outset")
                  for tecnico2 in tecnicos.data
                    <option value=#{tecnico2.id}>#{tecnico2.usuario}</option>
          .form-row  
            .form-group.col-md-4
              .form-group(class="container")
                label  GPS DE ENTRADA
                select(id="gpsentrada" class="form-control" style="border: 2px blue outset" autocomplete="cc-number")
                  for gpsint in gpsentrada.data
                    <option value=#{gpsint.id}>#{gpsint.numero_carcaza}</option> 
            .form-group.col-md-4
              .form-group(class="container")
                label ID GPS DE SALIDA
                input(type="text" class="form-control" id="idgpssalida"  style="border: 2px blue solid" disabled)                        
          .form-row
            .form-group.col-md-12
              .form-group(class="container")
                label COMENTARIO
                textarea(type="text" class="form-control" id="comentariove" style="border: 2px blue solid")                                       
      div(class="modal-footer")
        <div class="form-group form-check">
          button(type="button" id="btnCerrar" name="btnCerrar" class="btn btn-secondary" data-dismiss="modal" ) CERRAR
          button(button type="button" id="btnGuardarAsignacion" name="btnGuardarAsignacion" class="btn btn-primary") GUARDAR          
        </div>      
        
